                // Get public URL
                const { data: publicURL } = supabase.storage
                    .from('media')
                    .getPublicUrl(filePath);
                
                // Store media data in global variables
                window.currentMediaUrl = publicURL.publicUrl;
                window.currentMediaType = detectMediaTypeFromFile(file);
                
